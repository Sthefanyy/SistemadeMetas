{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Editar Meta</h3>
    <form action="/meta/index/edit" method="POST"> 
    <input type="hidden" name="id" value="{{index._id}}">
    <label for="titulo">Titulo: </label>
        <input type="text" id="titulo" name="titulo" placeholder="titulo" value="{{index.titulo}}">
    <label for="descricao">Descrição</label>
        <input type="text" id="descricao" name="descricao" placeholder="descricao" value="{{index.descricao}}">
    <button type="submit">Editar meta</button>
</form>